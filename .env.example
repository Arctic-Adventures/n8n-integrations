# Domain and URL Configuration
DOMAIN=your-domain.com
WEBHOOK_URL=https://n8n.your-domain.com

# n8n Configuration
N8N_PORT=5678
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_password

# Database Configuration
POSTGRES_DB=n8n
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=your_secure_password

# Email Configuration (Optional)
N8N_SMTP_HOST=smtp.gmail.com
N8N_SMTP_PORT=587
N8N_SMTP_USER=your_email@gmail.com
N8N_SMTP_PASS=your_app_password
N8N_SMTP_SENDER=your_email@gmail.com

# SSL Certificate Configuration
ACME_EMAIL=your_email@gmail.com

# Timezone
GENERIC_TIMEZONE=Europe/Berlin

# Traefik Authentication (generate with: echo $(htpasswd -nb user password) | sed -e s/\\$/\\$\\$/g)
TRAEFIK_AUTH=admin:$$2y$$10$$your_hashed_password